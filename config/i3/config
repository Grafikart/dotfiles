set $ws7 "7"
set $ws8 "8"

# Ecrans associé à chaque Workspace
workspace $ws1 output DVI-I-1
workspace $ws2 output DVI-I-1
workspace $ws3 output DVI-I-1
workspace $ws4 output HDMI-0
workspace $ws5 output HDMI-0
workspace $ws5 output DVI-D-0
# workspace $ws5 output eDP1
# workspace $ws6 output eDP1
# workspace $ws7 output eDP1
# workspace $ws8 output HDMI1

